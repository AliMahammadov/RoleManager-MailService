@using Pronia.Models;
@{
    ViewData["Title"] = "Index";
}
@model ICollection<Category>


<div class="container">
    <div class="card mt-5">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th >Id</th>
                        <th>Name</th>
                        <th>Imgage</th>
                 @*       <th>Image</th>*@
                        <th>Delete</th>
                        <th>Update</th>


                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Category in Model)
                    {


                        <tr>
                            <td>@Category.Id</td>
                            <td>@Category.Name</td>
                        @*    <td>@Category.Image</td>*@
                            <td><img src="@Category.ImgUrl" /></td>
                            <td><a a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-Id="@Category.Id">Delete</a></td>
                            <td><a a class="btn btn-info" asp-controller="Category" asp-action="Update" asp-route-Id="@Category.Id">Update</a></td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

